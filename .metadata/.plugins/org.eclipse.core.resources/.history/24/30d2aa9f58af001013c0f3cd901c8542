# coding=utf-8
# 生产40个50M大小的随机文件

import os

class CreateRandFiles:
    @staicmethod
    def create(parentPath, baseName, mbs, num):
        # 判断参数类型
        if isinstance(parentPath, string)
        # 创建父目录
        if not os.path.exists(parentPath):
            os.makedirs(parentPath)
        # 开始创建各个子文件
        index = 0
        while index < 40:
            fileName = parentPath + baseName + '_' + str(index)
            f = open(fileName, 'wb')
            for ii in range(1024 * mbs - 1):
                f.write(os.urandom(1024))
                f.flush()
            f.close
            index += 1
            print 'Has done %d;' % index

def main():
    print 3333 ** 333333
    CreateRandFiles.create('c:\\tmpp\\', '50MbigFile', 50, 40)

if __name__ == '__main__':
    main()